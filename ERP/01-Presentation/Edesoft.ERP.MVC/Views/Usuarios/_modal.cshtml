@using Edesoft.ERP.MVC.MVC.Pages.Helpers;

@helper fieldsCEP()
{
    <fieldset>
        <legend class="mb-3">Endereço</legend>
        @{ Html.RenderPartial("~/Views/CEP/_default.cshtml");}
    </fieldset>
}

@helper CreateBodyModalCrudUsuario()
{
    <form action="#" method="POST">
        <input type="hidden" class="edt-id-usuario" />
        <fieldset>
            <legend class="mb-3">Identificação</legend>
            <div class="mb-3">
                <label class="form-label">Nome do Usuário</label>
                <input class="form-control edt-nome-usuario" required data-parsley-trigger="change" />
            </div>
            <legend class="mb-3">Segurança</legend>
            <div class="row">
                <div class="col-lg-6 mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control edt-email-usuario" type="email" required data-parsley-trigger="change" />
                </div>
                <div class="col-lg-6 mb-3">
                    <label class="form-label">Password</label>
                    <input class="form-control edt-senha-usuario" type="password" required data-parsley-trigger="change" />
                </div>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input chk-usuario-ativo" type="checkbox" data-parsley-required="false" />
                <label class="form-check-label">Ativo?</label>
            </div>
        </fieldset>

        @fieldsCEP()

    </form>
}

@EdesoftHelperModal.CreateModal(new ModalHelper
{
    Name = "md-crud-usuario",
    Title = new TitleModalHelper
    {
        Text = "Cadastro de Usuários"
    },
    Body = CreateBodyModalCrudUsuario(),
    Footer = new FooterModalHelper()
    {
        Buttons = new List<ButtonHelper>() { new ButtonHelper { Name = "btn-save", Type = "btn-primary", Text = "Confirmar" } }
    }
})
